<!DOCTYPE policyconfig PUBLIC
"-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
"http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<policyconfig>

 <vendor>OpenMandriva</vendor>
 <vendor_url>https://openmandriva.org</vendor_url>

 <action id="org.openmandriva.mock.pkexec.run">
    <description>A simple chroot build environment manager for building RPMs</description>
    <message>Authentication is required to run the mock program</message>
    <icon_name>application-x-rpm</icon_name>
    <defaults>
     <allow_any>yes</allow_any>
     <allow_inactive>yes</allow_inactive>
     <allow_active>yes</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/libexec/mock/mock</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">false</annotate>
 </action>
</policyconfig>
